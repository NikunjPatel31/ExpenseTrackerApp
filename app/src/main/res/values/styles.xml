<resources>

    <!-- Base application theme. Theme.MaterialComponents.Light.NoActionBar.Bridge -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorSecondary">@color/colorHeading</item>
        <item name="colorControlHighlight">@color/colorAuthenticationButtonRipple</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="authenticationEdittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/colorHeading</item>
        <item name="android:textColorHint">@color/colorEdittextHint</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="authenticationButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <!--<item name="android:textColor">@color/colorHeading</item>-->
        <item name="android:background">@drawable/button_authentication_background</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="authenticationTextViewHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="fontFamily">@font/pacifico_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorHeading</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="homeScreentopbarTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorEdittextHint</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="homeScreenFab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="settingScreenTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/noto_sans_bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="settingScreenTextViewValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="editProfileDialogFragmentTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/noto_sans_bold</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="editProfileDialogFragmentEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="expenseHeadingTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="expenseEdittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textSize">23sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="ContentLoadingProgress">
        <item name="colorAccent">@color/colorActivityBackground</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/full_screen_dialog_open</item>
        <item name="android:windowExitAnimation">@anim/full_screen_dialog_close</item>
    </style>

</resources>
